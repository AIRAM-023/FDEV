{
	"name": "inline-doc",
	"displayName": "%displayName%",
	"description": "%description%",
	"version": "1.0.0",
	"publisher": "vscode",
	"engines": {
		"vscode": "^1.4.0"
	},
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:typescript"
	],
	"main": "./out/extension",
	"scripts": {
		"compile": "gulp compile-extension:inline-doc",
		"watch": "gulp watch-extension:inline-doc"
	},
	"dependencies": {
		"vscode-nls": "^4.0.0"
	},
	"contributes": {
        "configuration": {
            "title": "Inline Documentation configuration",
            "properties": {
                "inline-doc.enabled": {
                    "type": "boolean",
                    "description": "Whether inline documentation should be active",
                    "default": true
				}
			}
		}
	},
	"devDependencies": {
		"@types/node": "^8.10.25"
	}
}
