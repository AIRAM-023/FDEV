{
	"comments": {
		"lineComment": "//", // "#"
		"blockComment": [ "/*", "*/" ]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{ "open": "{", "close": "}", "notIn": ["string"] },
		{ "open": "[", "close": "]", "notIn": ["string"] },
		{ "open": "(", "close": ")", "notIn": ["string"] },
		{ "open": "'", "close": "'", "notIn": ["string", "comment"] },
		{ "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
		{ "open": "/**", "close": " */", "notIn": ["string"] }
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["'", "'"],
		["\"", "\""],
		["`", "`"]
	],
	"indentationRules": {
		"increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$|^\\s*(case\\s.+:|default\\s*:)$",
		"decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*\/)?\\s*[\\}\\]].*$",
		"indentNextLinePattern": "^\\s*(else|((else ?)?if|for(each)?|while) *\\(.*\\)):?$",
		"decreaseIndentWithPreviousLinePattern": "^((\\s*(else|((else ?)?if|for(each)?|while) *\\(.*\\)):?)|(\\s*(case\\s.+:|default\\s*:)))\\s*\\r?\\n\\s*\\{$"
	},
	"folding": {
		"markers": {
			"start": "^\\s*(#|\/\/)region\\b",
			"end": "^\\s*(#|\/\/)endregion\\b"
		}
	}
}
